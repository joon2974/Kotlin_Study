<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#283593">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3b479d"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/ampm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="56dp"
            android:text="오전"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/ampm"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/ampm"
            android:text="5:40"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />

        <Switch
            android:id="@+id/onOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/time"
            android:layout_alignParentRight="true"
            android:buttonTint="#FF0000" />

        <CheckBox
            android:id="@+id/repeatCheckView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ampm"
            android:layout_below="@id/ampm"
            android:layout_marginTop="16dp"
            android:buttonTint="#FFFFFF"
            android:text="반복"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ampm"
            android:layout_below="@id/repeatCheckView"
            android:layout_marginTop="16dp"
            android:src="@drawable/bell" />

        <TextView
            android:id="@+id/bellTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/bell"
            android:layout_toRightOf="@id/bell"
            android:clickable="true"
            android:text="Helium"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/labelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ampm"
            android:layout_below="@id/bellTextView"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:text="라벨"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:id="@+id/vibrateCheckView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/bellTextView"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:buttonTint="#FFFFFF"
            android:text="진동"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/sambtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelTextView"
            android:layout_marginTop="16dp"
            android:text="SAM 전환"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>